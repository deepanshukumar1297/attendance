	recommended to override equals and tostring method accordingly
	linked list is good for updation insertion or deletion
	array list is good for fetching or retrieval

*/



#	all the database related files are in dao package
#	port number = 3306
#	username ="root"
#	password=deep123


create database attendance;
use attendance;
create table student(name varchar (30) NOT NULL ,id varchar (10) ,primary key (id));
create table teacher(name varchar (30) NOT NULL ,id varchar (10)  ,primary key (id));
create table section(name varchar (15) NOT NULL ,id varchar (10)  ,primary key (id));
create table coordinator(name varchar (30) NOT NULL ,id varchar (10) ,primary key (id));


CREATE TABLE coordiantor_section (
    password varchar(20) NOT NULL,
    section varchar(10) NOT NULL REFERENCES section(name),
    coordinator varchar(30) NOT NULL REFERENCES teacher(name),
    section_id varchar(10) REFERENCES section(id),
    teacher_id varchar(10) NOT NULL REFERENCES teacher(id),
    PRIMARY KEY (section_id),
    FOREIGN KEY (section_id) REFERENCES section(id),
    FOREIGN KEY (teacher_id) REFERENCES teacher(id)
);





















