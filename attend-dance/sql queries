/*
	recommended to override equals and tostring method accordingly
	linked list is good for updation insertion or deletion
	array list is good for fetching or retrieval

*/



#	all the database related files are in dao package
#	port number = 3306
#	username ="root"
#	password=deep123


create database attendance;
use attendance;
create table teacher(
	teacher_name varchar(50) not null ,
    teacher_id varchar(20) ,
    teacher_password varchar(30) not null,
    countlogin int not null,
    primary key(teacher_id)
);
create table section(
	section_name varchar(50) unique not null ,
    section_id varchar(20),
	primary key(section_id)
);
create table subject(
	subject_name varchar(50) unique not null ,
    subject_id varchar(20),
    primary key(subject_id)
);
create table student(
	student_name varchar(50) not null ,
    student_id varchar(20),
    section_id varchar(20) ,
    foreign key (section_id) references section(section_id)
    on delete set null
    on update cascade,
	primary key(student_id)
);
create table coordinator(
	teacher_id varchar(20) not null unique,
    section_id varchar(20) ,
    foreign key (teacher_id) references teacher(teacher_id)
    on delete cascade
    on update cascade,
    foreign key (section_id) references section(section_id)
    on delete cascade
    on update cascade,
    primary key (section_id) 	
);
create table teacher_subject(
	teacher_id varchar(20) ,
    subject_id varchar(20) ,
    foreign key (teacher_id) references teacher(teacher_id)
    on delete cascade
    on update cascade,
    foreign key (subject_id) references subject(subject_id)
    on delete cascade
    on update cascade,
    primary key (teacher_id,subject_id)
);	
create table teacher_section(
	teacher_id varchar(20) ,
    section_id varchar(20) ,
    foreign key (teacher_id) references teacher(teacher_id)
    on delete cascade
    on update cascade,
    foreign key (section_id) references section(section_id)
    on delete cascade
    on update cascade,
    primary key (section_id,teacher_id)
);	
create table section_subject(
	subject_id varchar(20) ,
    section_id varchar(20) ,
    foreign key (subject_id) references subject(subject_id)
    on delete cascade
    on update cascade,
    foreign key (section_id) references section(section_id)
    on delete cascade
    on update cascade,
    primary key (section_id,subject_id)
);	
create table student_subject(
	student_id varchar(20) ,
    subject_id varchar(20) ,
    foreign key (student_id) references student(student_id)
    on delete cascade
    on update cascade,
    foreign key (subject_id) references subject(subject_id)
    on delete cascade
    on update cascade,
    primary key (subject_id,student_id)
);	






